{
  "name": "databoi",
  "version": "1.0.0",
  "description": "A TypeScript Discord bot with slash commands",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "NODE_ENV=development bun dist/index.js",
    "start:prod": "NODE_ENV=production GUILD_ID= bun dist/index.js",
    "dev": "NODE_ENV=development bun run src/index.ts",
    "watch": "NODE_ENV=development bun --watch src/index.ts",
    "lint": "npx ultracite@latest lint",
    "format": "npx ultracite@latest format"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  }
}
